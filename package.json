{
  "name": "music-before-die",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tinacms dev -c \"next dev\"",
    "build": "tinacms build && next build",
    "start": "tinacms build && next start",
    "lint": "next lint",
    "content": "NODE_OPTIONS='--experimental-json-modules' tsc ./src/constants/genres.ts --outDir ./src/scripts && node ./src/scripts/content/content.mjs",
    "resize": "NODE_OPTIONS='--experimental-json-modules' node ./src/scripts/resize.mjs"
  },
  "dependencies": {
    "@tinacms/cli": "^1.5.11",
    "daisyui": "^2.51.6",
    "framer-motion": "^10.12.8",
    "lastfm-client-ts": "^1.0.4-alpha.2",
    "next": "13.4.1",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-wrap-balancer": "^0.4.1",
    "slugify": "^1.6.6",
    "tinacms": "^1.5.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "20.0.0",
    "@types/react": "18.2.5",
    "@types/react-dom": "18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "10.4.14",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.17.19",
    "eslint": "8.39.0",
    "eslint-config-next": "13.4.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.2",
    "postcss": "8.4.23",
    "prettier": "^2.8.8",
    "sharp": "^0.32.1",
    "tailwindcss": "3.3.2",
    "tailwindcss-debug-screens": "^2.2.1",
    "tailwindcss-fluid-type": "^2.0.3",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.js,ts,tsx,": "eslint --cache --fix",
    "*.{js,ts,tsx,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
